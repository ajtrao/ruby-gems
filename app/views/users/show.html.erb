<h6>User Display</h6>

<div class="card">
  <div class="card-header">
    <b>Id:</b>
    <%= link_to @user.id, user_path(@user)%><br>
  </div>
  <div class="card-body">
    <b>Email:</b>
    <%= @user.email%><br>
    <b>Confirmation:</b>
    <%= boolean_label(@user.confirmed?)%><br>
    
    
    <% if @user.sign_in_count?%>
        <b><%= 'sign_in_count'.humanize %>: </b>
        <%= @user.sign_in_count %></br>
        <b><%= 'current_sign_in_at'.humanize  %> :</b>
        <%= @user.current_sign_in_at %></br>
        <b><%= 'last_sign_in_at'.humanize %>:</b>
        <%= @user.last_sign_in_at %></br>
        <b><%= 'current_sign_in_ip'.humanize %>:</b>
        <%= @user.current_sign_in_ip %></br>
        <b><%= 'last_sign_in_ip'.humanize  %> :</b>
        <%= @user.last_sign_in_ip %></br>
    <%end%>
    
    
    <b><%= 'failed_attempts'.humanize  %> :</b>
    <%= @user.failed_attempts %></br>
    <b><%= 'locked_at'.humanize  %> :</b>
    <%= @user.locked_at %></br>
    
    <b><%= 'provider'.humanize  %> :</b>
    <%= @user.provider %></br>
    
    <b><%= 'uid'.humanize  %> :</b>
    <%= @user.uid %></br>
    
    <b><%= 'name'.humanize  %> :</b>
    <%= @user.name %></br>
    
    <% if @user.image.present?%>
        <b><%= 'image'.humanize  %> :</b>
        <%= image_tag @user.image, size: "50x50", alt: "ajt" %></br>
    <%end%>
    
    <b><%= 'active_roles'.humanize  %> :</b>
    <%= @user.active_roles.join(",") %></br>
        
  </div>
  <div class="card-footer">
    <%= link_to 'edit', edit_user_path(@user), class: "btn btn-warning"%>
    <% if current_user.admin?%>
      
      <%= link_to ban_status(@user), ban_user_path(@user), method: :patch, class: "btn btn-danger"%>
      <%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %>
    <%end%>
  </div>
</div>